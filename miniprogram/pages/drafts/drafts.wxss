.container {
  min-height: 100vh;
  background-color: #1a1a1a;
  padding: 32rpx;
}

.header {
  padding: 32rpx 0;
}

.title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}

.draft-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.draft-item {
  background-color: #2a2a2a;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.draft-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.draft-title {
  font-size: 32rpx;
  color: #ffffff;
}

.draft-time {
  font-size: 24rpx;
  color: #999999;
}

.draft-actions {
  display: flex;
  gap: 16rpx;
}

.action-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: #3a3a3a;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-button.delete {
  background-color: #ff4444;
}

.action-button .icon {
  width: 32rpx;
  height: 32rpx;
  filter: invert(1);
}

.empty-state {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
} 