{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "typeRoots": [
      "./typings"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "miniprogram/*"]
    },
    "lib": [
      "es5",
      "es2015",
      "es2015.promise",
      "es2015.iterable",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "dom"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "types": ["miniprogram-api-typings"]
  },
  "include": [
    "miniprogram/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 